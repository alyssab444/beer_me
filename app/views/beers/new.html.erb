
<%= form_for @beer do |f| %>
<ul>
    <% @beer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <%= f.label :name %>
  <%= f.text_field :name %><br />
  <%= f.label :style %>
  <%= f.text_field :style %><br />
  <%= f.label :region %>
  <%= f.text_field :region %><br />
  <%= f.label :abv %>
  <%= f.text_field :abv %><br />
  <br />
  <%= f.submit %>
<% end %>
