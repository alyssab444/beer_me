<h1>Create a Hop Profile</h1>

<%= form_for @user, url: signup_path do |f| %>

<ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>

<%= f.label :username %>
<%= f.text_field :username %>
<br/>
<%= f.label :email %>
<%= f.email_field :email %>
<br/>
<%= f.label :password %>
<%= f.password_field :password %>
<br/>
<%= f.submit "Sign in"%>

<% end %>
